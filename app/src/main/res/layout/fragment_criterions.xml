<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/element_list_background"
    android:gravity="center_vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/element_criterion_name"
        android:drawableLeft="@drawable/ic_criterions"
        android:drawablePadding="5dp"
        android:drawableTint="@color/black"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/TextHeader.Simple"
        android:layout_width="0dp"
        android:layout_weight="30"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/element_criterion_total_value"
        android:drawablePadding="5dp"
        android:gravity="center_vertical|end"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/TextHeader.Simple"
        android:layout_width="0dp"
        android:layout_weight="30"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/element_criterion_subject"
        android:drawablePadding="5dp"
        android:gravity="center_vertical|end"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/TextHeader.Simple"
        android:layout_width="0dp"
        android:layout_weight="30"
        android:layout_height="wrap_content"/>


</LinearLayout>