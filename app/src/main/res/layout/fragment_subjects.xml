<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@drawable/element_list_background"
    android:gravity="center_vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/elemet_subject_name"
        android:drawableLeft="@drawable/ic_subject"
        android:drawablePadding="5dp"
        android:drawableTint="@color/black"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/TextHeader.Simple"
        android:layout_width="0dp"
        android:layout_weight="40"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/element_subject_kind"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/TextHeader.Simple"
        android:layout_width="0dp"
        android:layout_weight="40"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/element_subject_group"
        android:drawablePadding="5dp"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/text_margin"
        android:textAppearance="@style/TextHeader.Simple"
        android:layout_width="0dp"
        android:layout_weight="20"
        android:layout_height="wrap_content"/>


</LinearLayout>